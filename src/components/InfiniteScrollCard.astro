---
const badges = [
  {
    name: 'OSEP',
    src: '/badge/OSEP.svg',
    alt: 'OSEP',
    href: 'https://credentials.offsec.com/fc0a3329-f743-4ee5-aa40-70bd2bbb7995#acc.z6pHyCXc',
  },
  {
    name: 'BSCP',
    src: '/badge/BSCP.png',
    alt: 'BSCP',
    href: 'https://portswigger.net/web-security/e/c/425867b14072d723',
  },
  {
    name: 'CPTS',
    src: '/badge/CPTS.png',
    alt: 'CPTS',
    href: 'https://www.credly.com/badges/f524d913-3a37-4a9f-9d3a-0cdb917a1656',
  },
  {
    name: 'PNPT',
    src: '/badge/PNPT.webp',
    alt: 'PNPT',
    href: 'https://www.credential.net/848f4ecb-d9fc-430a-8417-9fbcc21db3b4#acc.U51b3aXl',
  },
  {
    name: 'CRTO',
    src: '/badge/CRTO.png',
    alt: 'CRTO',
    href: 'https://eu.badgr.com/public/assertions/568rOeA4TsOpAsRuSwbGkA',
  },
  {
    name: 'CAP',
    src: '/badge/CAP.png',
    alt: 'CAP',
    href: '#',
  },
]

const repeatedBadges = [...badges, ...badges, ...badges, ...badges]
---

<div class="bg-card text-card-foreground overflow-hidden rounded-lg border">
  <div class="p-16">
    <div class="infinite-scroll-container">
      <div class="infinite-scroll-track">
        {
          repeatedBadges.map((badge) => (
            <div class="badge-item">
              <a
                href={badge.href}
                target="_blank"
                rel="noopener noreferrer"
                class="badge-link"
                aria-label={badge.name}
              >
                <img
                  src={badge.src}
                  alt={badge.alt}
                  class="badge-image"
                  loading="lazy"
                />
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

<style>
  .infinite-scroll-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding: 1rem 0;
    mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
    -webkit-mask-image: linear-gradient(
      to right,
      transparent 0%,
      black 10%,
      black 90%,
      transparent 100%
    );
  }

  .infinite-scroll-track {
    display: flex;
    gap: 3rem;
    animation: scroll 20s linear infinite;
    width: max-content;
    align-items: center;
  }

  .infinite-scroll-track:hover {
    animation-play-state: paused;
  }

  .badge-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 120px;
    opacity: 1;
    transition: all 0.3s ease;
    padding: 0.5rem;
  }

  .badge-item:hover {
    opacity: 1;
    transform: scale(1.5);
  }

  .badge-image {
    width: 100px;
    height: 100x;
    object-fit: contain;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% / 4));
    }
  }

  /* Tablet */
  @media (max-width: 1023px) {
    .infinite-scroll-track {
      gap: 1.5rem;
      animation-duration: 25s;
    }

    .badge-item {
      min-width: 100px;
    }

    .badge-image {
      width: 86px;
      height: 86px;
    }
  }

  /* Mobile */
  @media (max-width: 767px) {
    .infinite-scroll-container {
      padding: 0.75rem 1rem;
    }

    .infinite-scroll-track {
      gap: 1rem;
      animation-duration: 20s;
    }

    .badge-item {
      min-width: 80px;
      padding: 0.4rem;
    }

    .badge-image {
      width: 70px;
      height: 70px;
    }

    .badge-item:hover {
      transform: scale(1.5);
    }
  }

  /* Small Mobile */
  @media (max-width: 480px) {
    .infinite-scroll-track {
      gap: 0.75rem;
      animation-duration: 18s;
    }

    .badge-item {
      min-width: 70px;
      padding: 0.3rem;
    }

    .badge-image {
      width: 70px;
      height: 70px;
    }

    .badge-item:hover {
      transform: scale(1.5);
    }
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .infinite-scroll-track {
      animation-duration: 60s;
    }

    .badge-item:hover {
      transform: none;
    }
  }
</style>
